.header-left
  .header-left__logo
    =current_user.name
  .header-left__logo2
  = link_to edit_user_path(current_user) do
    = fa_icon 'cog', class: "contents__btn--icon"
  .header-left__logo3
  = link_to new_group_path do
    = fa_icon 'edit', class: "contents__btn--icon"
.header-right
  .header-right__logo
    .header-right__logo0
      =@group.name
      .header-right__logo2
        
  = link_to edit_group_path(@group) do
    .header-right__logo1
      EDIT
.contents
  .contents0
    -current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .left-content
          =group.name
          .left-content1
            = group.show_last_message
.contents-main
  .messages
    = render @messages

  .footer-main
    = form_for [@group, @message] do |f|
      .footer
        .footer1
          = f.text_field :content, class: 'footer00', placeholder: 'type a message'
          .footer2
            = f.label :image, class: 'contents__btn--i' do
              = fa_icon 'image', class: "contents__btn--i"
              = f.file_field :image, class: 'footer0'
      .footer3
        = f.submit 'Send', class: 'footer4'
